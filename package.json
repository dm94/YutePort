{
  "name": "yuteport",
  "version": "1.0.1",
  "description": "Portfolio designed to control the status of our cryptocurrencies in each exchange",
  "private": true,
  "license": "UNLICENSED",
  "author": "Daniel MartÃ­n",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "https://github.com/dm94/YutePort"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "better-sqlite3": "^7.4.5",
    "bootstrap": "^5.1.3",
    "ccxt": "^1.62.44",
    "electron-is-dev": "^2.0.0",
    "i18next": "^21.5.4",
    "jquery": "^3.6.0",
    "react": "^17.0.2",
    "react-charts": "^3.0.0-beta.34",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.14.3",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3",
    "web3": "^1.6.1",
    "web3-eth": "^1.6.1",
    "winston": "^3.3.3"
  },
  "build": {
    "appId": "com.deeme.yuteport",
    "productName": "YutePort",
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "publish": {
      "provider": "github",
      "owner": "dm94",
      "repo": "YutePort"
    }
  },
  "main": "public/electron.js",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "ELECTRON_START_URL=http://localhost:3000 electron .",
    "dev": "concurrently --kill-others \"npm run react-start\" \"npm run electron\"",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "npm run react-build && electron-builder",
    "release": "npm run react-build && electron-builder --publish=always"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.4.0",
    "electron": "^16.0.2",
    "electron-builder": "^22.14.5",
    "electron-rebuild": "^3.2.5",
    "wait-on": "^6.0.0",
    "react-dev-utils": ">=11.0.4"
  }
}
